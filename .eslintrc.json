{
  "root": true,
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "no-console": 1,
    "react/display-name": "warn",
    "react/prop-types": "warn"
  },
  "plugins": [
    "react"
  ]
}
